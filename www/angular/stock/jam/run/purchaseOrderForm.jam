	function calcAllRowValues() {
		// @@TODO ...
		cnt = 1;
		while (true) {
			flt = 'SEQ_' + cnt + '_stock_supplier_order_item.id';
			startObj = document.getElementById(flt);
			if (startObj)
				calcRowValues(startObj);
			else
				break;
			cnt++;
			if (cnt > 10)
				break;
		}
	}

	function calcRowValues(obj) {
		objQty = getSibling(obj, 'stock_supplier_order_item.qty');
		objPrice = getSibling(obj, 'stock_product.cost');
		objLineTotal = getSibling(obj, 'linetotal');
		objLineVolume = getSibling(obj, 'linevolume');
//		objProductVolume = get('stock_product.volume');	// @@TODO ... single table.field lookup needed here
		lineTotal = (objQty.value * objPrice.value);
		lineVolume = (objQty.value * 0.25);			// @@TODO remove hardcoding
		objLineTotal.value = lineTotal.toFixed(2);
		objLineVolume.value = lineVolume.toFixed(2);
		// Update total container usage (all rows)
