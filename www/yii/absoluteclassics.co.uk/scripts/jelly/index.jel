			css.width = 20%
			css.color = #ffffff
			css.text-align = center
			click = ?layout=index&page=terms-conditions

			[footer-contact]
			html.raw = Contact Us
			css.text-align = right
			css.width = 20%
			css.color = #ffffff
			click = ?layout=index&page=contact-live-classical-music-dumfries

			[wirefly]
			css.margin-top = 100px
			css.height = 50px
