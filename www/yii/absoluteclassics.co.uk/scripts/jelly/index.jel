#AbsoluteClassics

[defaults]
include = default-values

[* : defaults]
# Every blob inherits these before adding/overriding

[screen]
child = site
css.background-color = #ffffff
#fx.wallpaper-image = /img/background.jpg
css.display = block

	[site]
	child = header, home-page, other-content, footer
	css.display = block
	css.background-color = white
	css.opacity = 0.8

	


####### Header #########################

[header]
child = logo, menu
css.background-color = #f9d194
###menu overlay #eb6200
# When changing the height, also need to change it in css (adding 10px there)
css.height = 200px
css.width = 100%

[logo]
css.width = 100%
image.url = img/ac-logo.png
image.width = 200px
image.height = 91px
image.align = center
click = http://www.absoluteclassics.co.uk/

[menu]
css.height = 40px
#css.width = 960px
css.overflow = visible
css.margin-top = 0px
css.margin-left = 0px
