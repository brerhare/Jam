[* : defaults]

[screen]
child = site
fx.wallpaper-image-tile = /img/background.jpg
css.display = block

	[site]
	child = header, slider, pages, footer
	css.width = 970px

####  Header  #################################

	[header]
	child = logo-and-signup, menu
	css.height = 200px
	
		[logo-and-signup]
