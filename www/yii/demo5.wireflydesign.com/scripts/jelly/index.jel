		css.margin-top = 25px
		css.height = 120px
		css.width = 500px
		css.z-index = 1000
		css.position = relative
		image.url = img/Logo.png
		image.width = 241px
		image.height = 116px
		click = http://www.demo5.wireflydesign.com

		[signup]
		css.margin-left = 50px
		css.margin-top = 30px
