#Jardine Roofing
[defaults]
include = default-values

# Every blob inherits these before adding/overriding

[* : defaults]

[screen]
child = site
fx.wallpaper-image-tile = /img/bgd-img.jpg
css.display = block

	[site]
	child = header, slider, pages, footer
	css.width = 70%
	css.min-width = 960px

####  Header  #################################

	[header]
	css.margin-top = 2%
	child = logo, contact
	stacking = horizontal
	css.width = 100%
		
		[logo]
		css.width = 45%
		image.url = img/logo.png
		image.width = 100%
		image.height = 48%
		click = ?layout=index&page=index

		[contact]
		child = contact-spacer, contact-content
		css.margin-top = 8%
		css.float = right
		css.width = 45%
		css.border-width = 10px
		css.border-color = #365ca7
		css.border-style = solid
		fx.rounding = 12px
		css.background-color = white
		
			[contact-spacer]
			css.width = 100%
			css.height = 1px
						
			[contact-content]
			child = contact-text, contact-icons
			stacking = horizontal
			
				[contact-text]
				css.width = 60%
				css.margin = 3% 7%
				image.url = img/contact.png
				image.width = 100%
				image.height = 100%
							
					
				[contact-icons]
				child = facebook, email
				css.width = 12%
				css.margin-left = 5%
				
					[facebook]
					css.width = 100%
					css.margin-top = 8%
					image.url = img/facebook.png
					image.width = 100%
					image.height = 100%
					click = ?layout=index&page=index
					
					[email]
					css.width = 100%
					css.margin-top = 8%
					image.url = img/email.png
					image.width = 100%
					image.height = 100%
					click = ?layout=index&page=contact-dumfries-roofers-roofing-company


#### Slider ###########################################

	[slider]
	css.margin-top = 3%
	css.width = 97.5%
  	css.height = 400px
	css.border-width = 10px
	css.border-color = #365ca7
	css.border-style = solid
	fx.rounding = 12px
	css.background-color = yellow
	condition = @PAGE=@HOMEPAGE
	jam.embed = /run/jardineSlider.jam
	
