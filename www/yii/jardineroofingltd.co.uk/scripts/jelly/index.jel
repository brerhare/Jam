	[footnote]
	child = copyright, admin-links
	css.width = 25%
	css.background-color = yellow

		[copyright]
		css.width = 100%
		css.margin-top = 10px
		html.raw = Jardine Roofing Ltd &copy 2016</br>All rights reserved
