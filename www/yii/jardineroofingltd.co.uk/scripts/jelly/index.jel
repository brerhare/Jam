		[wirefly]
		css.width = 95%
		css.margin-top = 1%
		image.url = img/wirefly-design.png
		image.width = 100%
		image.height = 100%
		image.align = left
		clicknew = http://www.wireflydesign.com
		
	
		[admin]
		child = cog-center
		css.width = 15%
		css.background-size = 100%
		css.background-image = url('/img/admin-dark.png')
		css.margin-left = -20%
		
			[cog-center]
			css.width = 50%
			css.height = 100%
			css.margin-top = 25%
			css.margin-bottom = 25%
			image.url = img/cog-center.png
			image.width = 100%
