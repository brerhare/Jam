#Wee Target
[defaults]
include = default-values
[* : defaults]

[screen]
child = menu, content
#fx.wallpaper-image = /img/background.jpg
fx.wallpaper-color = #8dadca

	[menu]
	css.overflow = visible

	addon.menu.traditional.orientation = horizontal
	addon.menu.traditional.height = 80px

	addon.menu.traditional.menu-font-family = monospace
	addon.menu.traditional.menu-font-size = 16
	addon.menu.traditional.menu-font-weight = normal
	addon.menu.traditional.menu-text-color = yellow

# align = left, center
	addon.menu.traditional.align = center

# autosize by default
	addon.menu.traditional.width = 1100px

# item-width = variable, uniform, or a px value. Variable by default. If uniform is set, then width must be set too (not autowidth)
	#addon.menu.traditional.item-width = variable
	addon.menu.traditional.item-width = uniform
	#addon.menu.traditional.item-width = 80px

# item-margin is the gap in px between items
	##addon.menu.traditional.item-margin = 10px

	addon.menu.traditional.menu-rounding = 4
	addon.menu.traditional.menu-opacity = 99%

	#addon.menu.traditional.menu-tile = /img/twitter.png
	addon.menu.traditional.menu-stretch = /img/facebook.png
	#addon.menu.traditional.menu-color = #0e3576 #235896

	addon.menu.traditional.item-separator-width = 10
	#addon.menu.traditional.item-separator-color = cyan
	addon.menu.traditional.item-separator-tile = /img/facebook.png
	#addon.menu.traditional.item-separator-stretch = /img/facebook.png

	addon.menu.traditional.edgepadding = 5

	addon.menu.traditional.menu-hover-text-color = green
	addon.menu.traditional.menu-hover-background-color = pink
	addon.menu.traditional.menu-hover-font-family = monospace
	addon.menu.traditional.menu-hover-font-size = 20
	addon.menu.traditional.menu-hover-font-weight = light

	addon.menu.traditional.menu-selected-text-color = blue
	addon.menu.traditional.menu-selected-background-color = orange
	addon.menu.traditional.menu-selected-font-family = serif
	addon.menu.traditional.menu-selected-font-size = 10 
	addon.menu.traditional.menu-selected-font-weight = bold

	#addon.menu.traditional.submenu-width = 200px
	addon.menu.traditional.submenu-font-family = arial
	addon.menu.traditional.submenu-font-size = 14
	addon.menu.traditional.submenu-font-weight = bold
	addon.menu.traditional.submenu-text-color = white 
	#addon.menu.traditional.submenu-background-color = black grey
	#addon.menu.traditional.submenu-background-tile = /img/facebook.png
	addon.menu.traditional.submenu-background-stretch = /img/facebook.png

	addon.menu.traditional.submenu-separator-width = 20px
	#addon.menu.traditional.submenu-separator-color = red
	addon.menu.traditional.submenu-separator-tile = /img/facebook.png
	#addon.menu.traditional.submenu-separator-stretch = /img/facebook.png


	[content]
	css.height = 2000
	db.table = ContentBlock
	db.filter = url=$_GET['page']
	db.error = Sorry, I could not find the page $_GET['page']
	html.raw = ContentBlock.content <br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/>


