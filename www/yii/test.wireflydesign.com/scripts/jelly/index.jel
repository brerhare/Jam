#Test file
[defaults]
include = default-values
css.color = black

; Every blob inherits these before adding/overriding
[* : defaults]

[screen]
child = backgd
#css.background-color = #000000
#style.background-image = /img/StyleBackground.png
fx.wallpaper-image = /img/FullBackground.jpg
css.display = block

[backgd]
child = contentframe
css.width = 1000px
css.background-color = white

	[contentframe]
	child = header, menu, slider, contentcontainer, footer
	css.width = 960px

######################## Header ############################ 

	[header]
	child = logo, contact, cart
	css.margin-top = 20px
	css.height = 104px
	stacking = horizontal

	[logo]
	css.width = 250px
	css.height = 50px
	css.margin-top = 40px
	image.url = img/Logo small.png
	image.width = 150px
	image.height = 50px

	[contact]
	child = contact-text
	css.height = 104px
	css.width = 30%

		[contact-text]
		css.margin-top = 30px
		#css.margin-left = 5px
		css.height = 104px
		html.p = Short Description / Tag Line etc ...
		html.p = Email: a@b.co.uk

	
	[cart]
	child = cart-pic, cart-text
	stacking = horizontal
	css.margin-top = 20px
	css.height = 18px
	click = http://www.test.wireflydesign.com/?layout=index&page=basket

			[cart-pic]
			css.width = 25px
			css.background-image = url('/img/cart.jpg')
			css.height = 17px

			[cart-text]
			css.width = 100px
			css.margin-top = 4px
			css.margin-left = 4px
			css.font-size = 12px
			html.raw = Shopping Cart

######################## Menu ############################ 

	[menu]
	#css.height = 34px
	#css.width = 100px
	css.overflow = visible
	css.margin-left = 0px
	css.margin-top = 3px
	#addon.menu.basic.orientation = vertical
	addon.menu.basic.width = 960px
	addon.menu.basic.font-size = 14px
	addon.menu.basic.menu-rounding = 0px
	addon.menu.basic.menu-opacity = 100%
	addon.menu.basic.menu-tile = /img/menu-bkgd.jpg
	#addon.menu.basic.menu-stretch = /img/menu-bar.jpg
	addon.menu.basic.menu-color = blue green
	addon.menu.basic.menu-text-color = red
	addon.menu.basic.submenu-color = yellow red
	addon.menu.basic.item-color = yellow orange
	addon.menu.basic.item-text-color = green
	addon.menu.basic.subitem-color = white yellow
	addon.menu.basic.subitem-text-color = red
	addon.menu.basic.subitem-separator-color = white

######################## Slider ############################ 

	[slider]
    css.margin-top = 20px
	css.width = 960px
    #css.height = 250px ...... This is one way of hiding the dots!
    addon.slider.glitz.width = 956px
    addon.slider.glitz.mode = image
    addon.slider.glitz.source = db


######################## Content ############################ 

    [contentcontainer]
    child = content
    #css.background-color = white
    fx.rounding = 4px

        [content]
        css.margin = 15px
        db.table = ContentBlock
        db.filter = url=$_GET['page']
        db.error = Sorry, I could not find the page $_GET['page']
        html.raw = ContentBlock.content


######################## Footer ############################ 


	[footer]
	child = footer-menu, wirefly-details
	#css.height = 40px
	css.width = 60%

		[footer-menu]
		stacking = horizontal
		child = footer-cookies, footer-tandc, footer-contact
		css.height = 20px

			[footer-cookies]
			html.raw = Cookie Policy
			css.width = 33%
			css.text-align = left
			click = www.bbc.com

			[footer-tandc]
			html.raw = Terms & Conditions
			css.width = 33%
			css.text-align = center
			click = www.bbc.com

			[footer-contact]
			html.raw = Contact Us
			css.text-align = right
			css.width = 30%
			click = www.bbc.com

		[wirefly-details]
		css.margin-top = 20px
		css.height = 20px
		css.text-align = center
		html.raw = Site by Wirefly Design
		click = www.wireflydesign.com
