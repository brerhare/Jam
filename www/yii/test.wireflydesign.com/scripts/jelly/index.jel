#Style Your Venue
[defaults]
include = default-values
css.color = white

; Every blob inherits these before adding/overriding
[* : defaults]

[screen]
child = backgd
#css.background-color = #000000
#style.background-image = /img/StyleBackground.png
fx.wallpaper-image = /img/FullBackground.jpg
css.display = block

[backgd]
child = contentframe
css.width = 1000px
css.background-color = green

	[contentframe]
	child = header, menu, slider, line, contentcontainer, footer
	css.width = 960px

	[header]
	child = logo, contact, icons
	css.margin-top = 20px
	css.height = 104px
	stacking = horizontal

	[logo]
	child = logo-pic
	css.height = 104px
	css.width = 40%

		[logo-pic]
		css.height = 104px
		#css.width = 40%
		#style.background-image = /img/Header Logo.png
		css.background-image = url('/img/Header Logo.png')

	[contact]
	child = contact-text
	css.height = 104px
	css.width = 30%

		[contact-text]
		css.margin-top = 30px
		#css.margin-left = 5px
		css.height = 104px
		html.p = Short Description / Tag Line etc ...
		html.p = 07868 840894 
		#html.p = Email: a@b.co.uk

	[icons]
	child = cart, news, social
	css.margin-left = 50px
	css.width = 200px

		[cart]
		child = cart-pic, cart-text
		stacking = horizontal
		css.margin-top = 20px
		css.height = 18px
		
		click = http://www.google.com

			[cart-pic]
			css.width = 25px
			css.background-image = url('/img/cart.jpg')
			css.height = 17px

			[cart-text]
			css.width = 80%
			css.margin-top = 4px
			css.margin-left = 4px
			css.font-size = 12px
			html.raw = Shopping Cart

		[news]
		child = news-pic, news-text
		stacking = horizontal
		css.height = 18px
		click = http://www.google.com

			[news-pic]
			css.width = 25px
			css.background-image = url('/img/news.jpg')
			css.height = 17px

			[news-text]
			css.width = 80%
			css.margin-top = 4px
			css.margin-left = 4px
			css.font-size = 12px
			html.raw = Newsletter

		[social]
		child = social-fb, social-twitter
		stacking = horizontal
		css.margin-top = 4px
		css.height = 22px
		click = http://www.google.com

			[social-fb]
			css.width = 22px
			css.margin-left = 2px
			css.background-image = url('/img/FB.jpg')
			css.height = 22px

			[social-twitter]
			css.width = 22px
			css.margin-left = 4px
			css.background-image = url('/img/Twitter.jpg')
			css.height = 22px

	[menu]
	css.height = 34px
	#css.width = 600px
	css.overflow = visible
	css.margin-top = 2px
	#addon.menu.basic.orientation = vertical
	addon.menu.basic.width = 960px
	addon.menu.basic.font-size = 16px
	addon.menu.basic.menu-rounding = 5px
	addon.menu.basic.menu-opacity = 100%
	addon.menu.basic.menu-tile = /img/menu-bar.jpg
	#addon.menu.basic.menu-stretch = /img/menu-bar.jpg
	addon.menu.basic.menu-color = blue green
	addon.menu.basic.menu-text-color = red
	addon.menu.basic.submenu-color = yellow red
	addon.menu.basic.item-color = yellow orange
	addon.menu.basic.item-text-color = green
	addon.menu.basic.subitem-color = white black
	addon.menu.basic.subitem-text-color = purple
	addon.menu.basic.subitem-separator-color = blue

	[slider]
    css.margin-top = 20px
	css.width = 960px
    #css.height = 250px ...... This is one way of hiding the dots!
    addon.slider.flexslider.width = 950px
    addon.slider.flexslider.border-width = 2px
    addon.slider.flexslider.border-color = red
    addon.slider.flexslider.height = 240px
    addon.slider.flexslider.mode = image
    addon.slider.flexslider.source = db



	[line]
    css.height = 4px
	css.margin-top = 10px
    css.background-color = #ff00ff

    [contentcontainer]
    child = content
    css.background-color = red
    fx.rounding = 4px

        [content]
        css.margin = 15px
        db.table = ContentBlock
        db.filter = url=$_GET['page']
        db.error = Sorry, I could not find that page. You requested $_GET['page']
        html.raw = ContentBlock.content


	[footer]
	child = footer-menu, wirefly-details
	#css.height = 40px
	css.width = 60%

		[footer-menu]
		stacking = horizontal
		child = footer-cookies, footer-tandc, footer-contact
		css.height = 20px

			[footer-cookies]
			html.raw = Cookie Policy
			css.width = 33%
			css.text-align = left
			click = www.bbc.com

			[footer-tandc]
			html.raw = Terms & Conditions
			css.width = 33%
			css.text-align = center
			click = www.bbc.com

			[footer-contact]
			html.raw = Contact Us
			css.text-align = right
			css.width = 30%
			click = www.bbc.com

		[wirefly-details]
		css.margin-top = 20px
		css.height = 20px
		css.text-align = center
		html.raw = Site by Wirefly Design
		click = www.wireflydesign.com



