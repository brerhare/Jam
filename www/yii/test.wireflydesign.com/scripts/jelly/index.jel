#Test file
[defaults]
include = default-values

; Every blob inherits these before adding/overriding
[* : defaults]

[screen]
child = site
fx.wallpaper-image-tile = /img/straw-tile.jpg
css.display = block

	[site]
	child = header, slider, homegraphics, page, footer
	css.width = 970px

####  Header  #################################

		[header]
		child = logo, header-dt
		stacking = horizontal
		css.margin-top = 10px

			[logo]
			css.margin-left = 50px
			css.margin-top = 15px
			css.height = 110px
			css.width = 400px
			css.z-index = 1000
			css.position = relative
			image.url = img/Logo.png
			image.width = 241px
			image.height = 116px
			click = http://www.test.wireflydesign.com

			[header-dt]
			child = stat-link, menu
			css.width = 500px
			#css.margin-top = 10px

				[stat-link]
				child = cart, news
				css.height = 45px
				css.width = 260px
				css.margin-left = 150px
				fx.rounding = 4px
				css.background-color = white
				stacking = horizontal

					[cart]
					css.width = 120px
					css.height = 22px
					css.margin-left = 40px
					css.margin-top = 15px
					html.raw = Shopping Cart
					css.font-size = 12px
					click = http://www.test.wireflydesign.com/?layout=index&page=checkout
							

					[news]
					css.width = 100px
					css.height = 22px
					css.margin-left = 0px
					css.margin-top = 15px
					html.raw = Newsletter
					css.font-size = 12px
					click = http://www.test.wireflydesign.com/?layout=index&page=text-blog



		[menu]
		css.height = 50px
		css.margin-top = 30px
		css.margin-left = 0px
		css.overflow = visible
		css.z-index = 1000
		css.position = absolute
		addon.menu.basic.orientation = horizontal
		addon.menu.basic.font-size = 14px
		addon.menu.basic.menu-rounding = 4px
			#addon.menu.basic.menu-opacity = 70%
			#addon.menu.basic.menu-tile = /img/menu-bar.jpg
			#addon.menu.basic.menu-stretch = /img/menu-bar.jpg
		addon.menu.basic.menu-color = white
	#addon.menu.basic.menu-text-color = red
	#addon.menu.basic.submenu-color = yellow red
	#addon.menu.basic.item-color = black yellow
	#addon.menu.basic.item-text-color = green
	#addon.menu.basic.subitem-color = white black
	#addon.menu.basic.subitem-text-color = purple
	#addon.menu.basic.subitem-seperator-color = red 



####SLider###########################################

	[slider]
	css.margin-top = -30px
	#css.margin-left = 30px
	css.width = 960px
  	css.height = 270px
	addon.slider.flexslider.width = 952px
	addon.slider.flexslider.height = 260px
	addon.slider.flexslider.mode = image
	addon.slider.flexslider.source = db


########body#######################################
			

#######homepage only content############################

	[homegraphics]
	child = easel-icons, white-block, home-contentblock
	condition = @HOMEPAGE=1
	css.width = 960px

		[easel-icons]
		child = gallery, gifts, workshop
		stacking = horizontal
		css.height = 300px
		css.margin-left = 100px

			[gallery]
			image.url = /img/Gallery.png
			image.width = 250px
			image.height = 295px
			click = http://www.the-art-room.co.uk/?layout=index&page=original-art-gallery-dumfries-old-school

			[gifts]
			image.url = /img/Gifts.png
			image.width = 250px
			image.height = 295px
			click = http://www.the-art-room.co.uk/?layout=index&page=handmade-unique-unusual-gifts-dumfries

			[workshop]
			image.url = /img/Workshops.png
			image.width = 250px
			image.height = 295px
			click = http://www.the-art-room.co.uk/?layout=index&page=art-craft-workshops-dumfries

		[white-block]
		css.width = 960px
		css.height = 150px
		css.background-color = white
		fx.rounding = 4px
		css.margin-top = -120px

		[home-contentblock]
		child = home-content
		css.margin-top = -30px
		css.background-color = white
		fx.rounding = 4px

			[home-content]
			#css.background-color = white
			#css.margin-top = 10px
			css.color = black
			css.margin = 30px
			db.table = ContentBlock
			db.filter = url=$_GET['page']
			db.error = Sorry, I could not find that page. You requested $_GET['page']
			html.raw = ContentBlock.content




######content for other pages##################################

	[page]
	child = content
	condition = @HOMEPAGE=0
	css.background-color = white
	css.margin-top = 20px
	fx.rounding = 4px

		[content]
		#css.background-color = white
		css.color = black
		css.margin = 50px
		db.table = ContentBlock
		db.filter = url=$_GET['page']
		db.error = Sorry, I could not find the page $_GET['page']
		html.raw = ContentBlock.content

