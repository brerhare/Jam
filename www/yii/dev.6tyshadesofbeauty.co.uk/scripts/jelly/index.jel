#6TY Shades
[defaults]
include = default-values

# Every blob inherits these before adding/overriding

[* : defaults]

[screen]
child = slider, site
fx.wallpaper-image = /img/plain-bg.jpg
css.display = block
css.background-color = black

	[slider]
	css.width = 80%
	css.margin-left = 10%
#	css.min-width = 600px
	css.height = 100%
	condition = @PAGE=@HOMEPAGE

	css.position = fixed
	css.z-index = 1
	
addon.slider.flexslider.width = 100%
addon.slider.flexslider.height = 100%
addon.slider.flexslider.mode = image
addon.slider.flexslider.source = db

addon.slider.flexslider.border-width = 0px
#addon.slider.flexslider.border-color = red
#addon.slider.flexslider.active-dotcolor = red
#addon.slider.flexslider.inactive-dotcolor = blue
#addon.slider.flexslider.dot-margin-top = -200px
#addon.slider.flexslider.dot-margin-bottom = 0px
#addon.slider.flexslider.dot-margin-left = 0px
#addon.slider.flexslider.dot-margin-right = 0px
#addon.slider.flexslider.animation = fade
#addon.slider.flexslider.mode = HTML
#addon.slider.glitz.slider = 2


	[site]
	child =	header, home-page, pages, footer
	css.width = 100%
	css.z-index = 10
	css.position = relative

####  Header  #################################

	[header]
	child = header-details
	css.height = 50px
	css.background-color = #ec008c
	
	
		[header-details]
		child = phone-no, menu
		css.width = 80%
		css.min-width = 600px
		css.margin-top = 5px
		stacking = horizontal
		
		[phone-no]
		css.width = 20%
		css.min-width = 150px
		image.url = img/tel-no.png
		image.width = 100%
		image.height = 10%
		click = http://www.dev.6tyshadesofbeauty.co.uk

		[menu]
#		css.height = 50px
		css.width = 50%
		css.float = right
		css.overflow = visible

		addon.menu.basic.orientation = horizontal
		#addon.menu.basic.width = 960px
		#addon.menu.basic.height = 30px
		#addon.menu.basic.level = 2

		#addon.menu.basic.menu-rounding = 4px
		#addon.menu.basic.menu-tile = /img/menu-bar.jpg
		#addon.menu.basic.menu-stretch = /img/menu-bar.jpg
		addon.menu.basic.menu-color = #ec008c
		#addon.menu.basic.item-separator-color = #ffffff
		#addon.menu.basic.item-separator-width = 3px

		addon.menu.basic.font-size = 12px
		addon.menu.basic.menu-text-color = white

		#addon.menu.basic.item-color = black yellow
		#addon.menu.basic.item-text-color = green

		#addon.menu.basic.submenu-color = yellow red
	
		#addon.menu.basic.subitem-color = white black
		#addon.menu.basic.subitem-text-color = purple
		#addon.menu.basic.subitem-seperator-color = red 




######## Home Page #######################################
	
[home-page]
condition = @PAGE=@HOMEPAGE
child = home-left, home-center, home-right
stacking = horizontal
css.width = 80%
css.min-width = 600px

	[home-left]
	child = home-vlogo, home-content
	css.width = 30%
	css.min-width = 200px
	
		[home-vlogo]
		css.width = 100%
		image.url = img/6ty-vertical.png
		image.width = 100%
		image.height = 227%
		click = http://www.dev.6tyshadesofbeauty.co.uk
		
		[home-content]
		css.width = 100%
	
	
	[home-right]
	child = home-banner, home main
	css.width = 65%
	css.min-width = 400px
	
		[home-banner]
		css.width = 100%
		
		[home-main]
		child = column-shop, column-side-menu, column-downloads
		css.margin-left = 50%
		css.width = 50%
		
			[column-shop]
#			addon.global.column.debug = 1
			addon.global.column.id = 1
			addon.global.column.width = 100%
			addon.global.column.internal-width = 100%

			addon.global.column.content-width = 98%
			addon.global.column.internal-color = transparent

			addon.global.column.background-color = transparent
#			addon.global.column.background-image = img/â€¦
#			addon.global.column.top-image = img/cow-spot-top.jpg
#			addon.global.column.top-height = 20px
#			addon.global.column.bottom-image = img/cow-spot-bottom.jpg
#			addon.global.column.bottom-height = 5px
			
			[column-side-menu]
			css.width = 10%
			
			[column-downloads]
			css.width = 10%
	
	
######## Pages #######################################

	[pages]
	condition! = @PAGE=@HOMEPAGE
	child = content 	
	css.width = 50%
	css.margin-top = 20px
	css.background-color = white
	fx.rounding = 4px
	
			
		[content]
		css.margin-top = 30px
		css.margin = 30px
		db.table = ContentBlock
		db.filter = url=$_GET['page']
		db.error = Sorry, I could not find the page $_GET['page']
		html.raw = ContentBlock.content


####footer####################################

[footer]
child = footer-left, footer-right
css.margin-top = 40px
css.background-color = #e6e7e8
stacking = horizontal

		[footer-left]
		child = copyright, design, wirefly
		css.width = 49%
		css.height = 50px
		stacking = horizontal

		[copyright]
		css.margin-top = 10px
		html.raw = 6TY Shades of Beauty &copy 2015 All rights reserved
		css.color = #000000
		css.font-size = 11px
		css.text-align = left
		
		[design]
		css.width = 10%

		[wirefly]
		child = wirefly-logo, admin
		stacking = horizontal
		css.margin-top = 20px

		
			[wirefly-logo]
			css.height = 45px
			css.margin-top = 5px
			image.url = img/wirefly-design.png
			image.width = 100px
			image.height = 46px
			image.align = left
			clicknew = http://www.wireflydesign.com
			
		
			[admin]
			child = cog-center
			css.height = 20px
			css.width = 20px
			css.background-size = 100%
			css.background-image = url('/img/admin.png')
			css.margin-left = -20px

				[cog-center]
				css.width = 5px
				css.height = 5px
				css.margin-top = 8px
				image.url = img/cog-center.png
				image.width = 5px
				image.height = 5px
				image.align = center
				clicknew = backend.php



		[footer-right]
		child = footer-cookies, footer-tandc, footer-contact
		css.height = 50px
		css.width = 50%

			[footer-cookies]
			html.raw = Cookie Policy
			css.width = 20%
			css.color = #000000
			css.font-size = 11px
			css.text-align = right
			click = ?layout=index&page=cookie-policy

			[footer-tandc]
			html.raw = Terms & Conditions
			css.width = 20%
			css.color = #000000
			css.font-size = 11px
			css.text-align = right
			click = ?layout=index&page=terms-conditions

			[footer-contact]
			html.raw = Contact Us
			css.text-align = right
			css.width = 20%
			css.color = #000000
			css.font-size = 11px
			click = ?layout=index&page=contact


	