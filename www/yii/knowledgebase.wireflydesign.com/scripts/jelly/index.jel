#knowledgebase
[defaults]
include = default-values

; Every blob inherits these before adding/overriding
[* : defaults]

[screen]
child = site
css.background-color = white
css.display = block

	[contentframe]
	child = header, page-content, footer
	css.width = 100%
	
		[header]
		child = home_icon, menu, logo
		stacking = horizontal
		css.width = 80%
				
			[home_icon]
			css.width = 10%
			css.margin-top = 40px
			image.url = img/home.png
			image.width = 40%
			image.height = 100%
			image.align = center
			click = ?layout=index&page=index
			html.raw = <a id="TOP" name="TOP">
			
			[menu]
			css.width = 60%
			css.margin-top = 40px
			css.overflow = visible
			addon.menu.basic.orientation = horizontal
			addon.menu.basic.height = 40px
			addon.menu.basic.align = center
			addon.menu.basic.level = 1
			addon.menu.basic.menu-font-family = "Comfortaa", Verdana, SanSerif
			addon.menu.basic.menu-font-size = 40px
			addon.menu.basic.menu-text-color = #2e2575
			addon.menu.basic.menu-text-weight = normal
			addon.menu.basic.menu-rounding = 0px
			addon.menu.basic.menu-color = transparent
			addon.menu.basic.item-separator-width = 0px
			addon.menu.basic.item-separator-color = transparent
		
			[logo]
			css.width = 30%
			image.url = img/Logo.png
			image.width = 80%
			image.height = 100%
			image.align = right
			clicknew = https://wireflydesign.com
			
	[page-content]
	child = page-container
	css.margin-top = -20px
	css.padding = 30px 0px
	css.width = 100%
	css.min-height = 350px
	css.background-size = 100%
	css.background-image = url('/img/blue_bokeh_pale.jpg')
	css.background-repeat = no-repeat
	
	[page-container]
	child = page-menu, content
	css.width = 80%
	stacking = horizontal
	
		[page-menu]
		css.width = 15%
		css.margin-top = 30px
		css.overflow = visible
		addon.menu.basic.orientation = vertical
		addon.menu.basic.height = 40px
		addon.menu.basic.align = center
		addon.menu.basic.level = 2
		addon.menu.basic.menu-font-family = "Comfortaa", Verdana, SanSerif
		addon.menu.basic.menu-font-size = 16px
		addon.menu.basic.menu-text-color = #2e2575
		addon.menu.basic.menu-text-weight = normal
		addon.menu.basic.menu-rounding = 0px
		addon.menu.basic.menu-color = transparent
		addon.menu.basic.item-separator-width = 0px
		addon.menu.basic.item-separator-color = transparent
		
		addon.menu.basic.item-color = transparent
		addon.menu.basic.item-text-color = #5e5794
		addon.menu.basic.submenu-color = transparent

		addon.menu.basic.subitem-color = transparent
		addon.menu.basic.subitem-text-color = #2e2575
		addon.menu.basic.subitem-seperator-color = #2e2575 
	
		[content]
		css.width = 75%
		css.margin-left = 2%
		db.table = ContentBlock
		db.filter = url=$_GET['page']
		db.error = Sorry, I could not find the page $_GET['page']
		html.raw = ContentBlock.content
	
			


[footnote]
			child = copyright, wirefly
			css.width = 80%
			css.margin-top = 10px
			
				[copyright]
				html.raw = Wirefly Design Ltd &copy 2015 <br>All rights reserved
				css.color = #000000
				css.font-size = 12px
				css.text-align = left
				
				[wirefly]
				child = wirefly-logo, admin
				stacking = horizontal
				css.margin-top = 20px
		
				
					[wirefly-logo]
					css.height = 45px
					css.margin-top = 5px
					image.url = img/wirefly-design.png
					image.width = 100px
					image.height = 46px
					image.align = left
					clicknew = http://www.wireflydesign.com
					
				
					[admin]
					child = cog-center
					css.height = 20px
					css.width = 20px
					css.background-size = 100%
					css.background-image = url('/img/admin.png')
					css.margin-left = -20px
		
						[cog-center]
						css.width = 5px
						css.height = 5px
						css.margin-top = 8px
						image.url = img/cog-center.png
						image.width = 5px
						image.height = 5px
						image.align = center
						clicknew = backend.php	